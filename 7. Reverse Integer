"""You can see the description of the task using the code specified in the title on leetcode.
 This program has O(1) complexity by time and O(1).

A math quest problem.
Reversing a string while preserving its range
"""

# With // 10
class Solution:
    def reverse(self, x: int) -> int:
        res = 0
        sign = -1 if x < 0 else 1
        x = abs(x)

        while x:
            digit = x % 10
            x //= 10
            res = res * 10 + digit

        res *= sign
        return res if -2**31 <= res <= 2**31 - 1 else 0

# With str
class Solution:
    def reverse(self, x: int) -> int:
        negative = x < 0
        if negative:
            x *= -1
        str_x = str(x)
        reversed_x = str_x[::-1]
        if len(reversed_x) > 10:
            return 0
        final_int = int(reversed_x) * (-1 if negative else 1)
        return final_int if (-2147483647 < final_int < 2147483647) else 0
